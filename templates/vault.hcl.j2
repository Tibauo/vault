storage "raft" {
  path    = "{{ vault_data_dir }}"
  node_id = "node1"
}

listener "tcp" {
  address     = "{{ vault_listen }}:8200"
  tls_disable = "true"
}

path "pki*" {
  capabilities = [ "create", "read", "update", "delete", "list", "sudo" ]
}

api_addr = "http://{{ ansible_fqdn }}:8200"
cluster_addr = "https://{{ ansible_fqdn }}:8201"
ui = true
